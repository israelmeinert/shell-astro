---
import Layout from '../layouts/Layout.astro';
import {Button} from '../components/Button'
---

<Layout>
	<div class="welcome-container">
		<div class="welcome-content">
			<h1>Bem-vindo ao Sistema!</h1>
			<p>VocÃª foi autenticado com sucesso.</p>
			<div class="actions">
				<Button client:only />
				<a href="/" class="logout-link">Fazer Logout</a>
			</div>
		</div>
	</div>
</Layout>

<style>
	.welcome-container {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		padding: 2rem;
	}

	.welcome-content {
		background: rgba(255, 255, 255, 0.95);
		padding: 3rem;
		border-radius: 16px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		text-align: center;
		max-width: 500px;
		width: 100%;
		backdrop-filter: blur(10px);
	}

	h1 {
		color: #1f2937;
		font-size: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	p {
		color: #6b7280;
		font-size: 1.2rem;
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.actions {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: center;
	}

	.logout-link {
		color: #ef4444;
		text-decoration: none;
		font-weight: 500;
		padding: 0.75rem 1.5rem;
		border: 2px solid #ef4444;
		border-radius: 8px;
		transition: all 0.2s;
	}

	.logout-link:hover {
		background: #ef4444;
		color: white;
	}

	@media (max-width: 768px) {
		.welcome-content {
			padding: 2rem;
		}

		h1 {
			font-size: 2rem;
		}
	}
</style>
